{
  "name": "helloworld-service",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/helloworld/app/src",
  "tags": [],
  "root": "apps/backend/helloworld",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/backend/helloworld && ./gradlew build"
        ]
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/backend/helloworld && ./gradlew run --continuous"
        ]
      }
    },
    "deploy": {
      "_comment": "TODO: figure out how to deploy to stage/prod separately",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/backend/helloworld && ./gradlew :app:optimizedJitJarAll && cd ./infra && cdk deploy --require-approval never"
        ]
      },
      "defaultConfiguration": "stage",
      "configurations": {
        "stage": {
          "stage": "stage"
        },
        "production": {
          "stage": "production"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/backend/helloworld && ./gradlew ktlintCheck"
        ],
        "parallel": false
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/backend/helloworld && ./gradlew ktlintFormat"
        ],
        "parallel": false
      }
    }
  }
}
